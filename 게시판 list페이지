<script>
	$('#loading').hide();

	/* 탭 번호 지정 */
	var thisTabIndex= "<%=tab_Index%>"
	thisPageTab(thisTabIndex);

	/* 검색 */
	function search() {
		var kd = $('input[name=kd]').val();

		if(kd=="") {
			alert("검색어를 입력해주세요.");
			$('input[name=kd]').focus();
			return false;
		}

		document.sform.submit();
	}

	/* 검색 Enter Key Control */
	function keyControl() {
		if (event.keyCode==13){
			search();
		}
	}

	/* 글 작성 */
	$('input[name=writeBtn]').click(function() {
		location.href="dev_request_view.asp"
	});
</script>

