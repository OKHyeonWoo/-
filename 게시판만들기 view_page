<%
page_id="3"
menu_id ="menu3_15_1"
menu_group="운영관리"
page_title= "개발요청_상세화면"
menu_category= ""

idx = request("idx")

sql="select idx, user_id, name, title, content, category, link1, file1, usr_ip,hope_date,plan_date, close_date, memo, regist_date"&_
" from board_request where idx='" & idx & "'"
Set rs=dbcon.execute(sql)
If Not rs.eof Then
	idx =		NVL(rs("idx") , "")
	title =		NVL(rs("title") , "")
	content =		NVL(rs("content") , "")
	category =	NVL(rs("category") , "")
	filename =	NVL(rs("file1") , "")
	link1 =	NVL(rs("link1") , "")
	memo =		NVL(rs("memo") , "")
	regist_date =	NVL(rs("regist_date") , "")
	anm =		NVL(rs("name") , "")
	close_date =NVL(rs("close_date") , "")
	plan_date =	NVL(rs("plan_date") , "")
	hope_date =	NVL(rs("hope_date") , "")
End If

'파일 다운로드 경로
filepath = "/files/dev_request/dev_request_file_download.asp?file=" & filename
%>
