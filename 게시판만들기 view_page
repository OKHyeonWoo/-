			<!--#include virtual="/include/loading.asp"-->

			<form name="nform" method="post" action="dev_request_view_save.asp" ENCTYPE="multipart/form-data">
			<input type="hidden" id="idx" name="idx" value="<%=idx%>" />
			<table>
				<tr>
					<th class="th5">분류</th>
					<th class="th50">제목</th>
					<th class="th5">파일</th>
					<th class="th25">문제발생주소</th>
					<th class="th17">완료희망일</th>
					<th class="th17">예정완료일</th>
					<th class="th17">완료일</th>
					<th class="th30">메모</th>
					<th class="th10">등록일</th>
					<th></th>
				</tr>
				<tr>

					<td>
					<select name="category">
							<option value="">선택</option>
							<option value="교육" <%If category = "교육" Then response.write "selected"%>>교육</option>
							<option value="영업" <%If category = "영업" Then response.write "selected"%>>영업</option>
							<option value="경영" <%If category = "경영" Then response.write "selected"%>>경영</option>
						</select>
					</td>

					<td><input type="text" name="title" value="<%=title%>" style="width: 98%;"></td>
					<td><% If filename <> "" then response.write "<a href='"&filepath&"' class='btn btnBg2'>파일</a>"%></td>
					<td><input type="text" name="link1" value="<%=link1%>" style="width: 98%;"></td>
					<td><input class="input_80" type="text" name="hope_date" value=<%=hope_date%>></td>
					<td><input class="input_80" type="text" name="plan_date" placeholder="개발팀입력" value=<%=plan_date%>></td>
					<td><input class="input_80" type="text" name="close_date" placeholder="개발팀입력" value=<%=close_date%>></td>
